{
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.cpp",
                "*.h",
                "*.hpp"
            ],
            "options": {
                "parser": "cpp"
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": [
                "*.java"
            ],
            "options": {
                "parser": "java"
            }
        },
        {
            "files": [
                "*.py"
            ],
            "options": {
                "parser": "python"
            }
        }
    ]
}